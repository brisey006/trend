				{{# if profile.is_trender}}
				<form method="post" action="/admin/trend/upload-directory" enctype="multipart/form-data">
					<!-- Form Controls -->
					<div class="row">
						<div class="col-md-10 mb-4">
							<div class="card">
								<header class="card-header">
									<h2 class="h3 card-header-title">Directory Details</h2>
								</header>

								<div class="card-body">

									<div class="form-group mb-4">
										<label for="defaultInput">Directory Name</label>
										<input id="name" class="form-control" type="text" placeholder="e.g person, company, place names" name="name" required>
									</div>

									<div class="form-group mb-4">
										<label for="defaultInput">Location</label>
										<input id="location" class="form-control" type="text" placeholder="physical address" name="location" required>
									</div>

									<div class="form-group mb-4">
										<label for="defaultInput">Services Offered (optional)</label>
										<textarea id="services" class="form-control" placeholder="e.g #service1 #service2" name="services" rows="5"></textarea>
									</div>

									<div class="form-group mb-4">
										<label for="defaultInput">Email Address(s)</label>
										<input id="emails" class="form-control" type="text" placeholder="e.g #e1 #e2" name="emails">
									</div>

									<div class="form-group mb-4">
										<label for="defaultInput">Phone Number(s)</label>
										<input id="cells" class="form-control" type="text" placeholder="e.g #no1 #no2" name="cells">
									</div>

									<div class="form-group mb-4">
										<label for="defaultInput">Facebook Handle</label>
										<input id="facebook" class="form-control" type="text" placeholder="facebook link" name="facebook">
									</div>

									<div class="form-group mb-4">
										<label for="defaultInput">Instagram Handle</label>
										<input id="instagram" class="form-control" type="text" placeholder="instagram link" name="instagram">
									</div>

									<div class="form-group mb-4">
										<label for="defaultInput">Twitter Handle</label>
										<input id="twitter" class="form-control" type="text" placeholder="twitter link" name="twitter">
									</div>

									<div class="form-group mb-4">
										<label for="defaultInput">Linkedin Handle</label>
										<input id="linkedin" class="form-control" type="text" placeholder="linkedin link" name="linkedin">
									</div>

									<div class="form-group mb-4">
										<label for="defaultInput">Website Url</label>
										<input id="website" class="form-control" type="text" placeholder="website link" name="website">
									</div>

									<div class="form-group mb-4">
										<label for="defaultInput">Directory Description</label>
										<textarea  class="form-control" id="mytextarea" name="description"></textarea>
									</div>

									<div class="form-group mb-4">
										<label for="defaultInput">Directory Image</label>
										<input id="image" class="form-control" type="file" name="image" required>
									</div>

									<div class="form-group mb-4">
										<button type="submit" class="btn btn-primary" name="upload">Submit Directory</button>
									</div>

								</div>
							</div>
						</div>
					</div>
					<!-- End Form Controls -->

				</form>
				{{else}}
				<h3>You're Suspended</h3>
				{{/if}}

